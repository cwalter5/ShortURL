@model SURL.Models.UrlModel
@{
    ViewBag.Title = "Short URL";
}

<h2>Short URL</h2>
@if(TempData.ContainsKey("newLink"))
{
    <div class="alert-success">
        Shortened link successfully added to database as <a href='@TempData["newLink"]'>@TempData["newLink"]</a>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.Id)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.Url)
            <div class="col-md-10">
                @Html.EditorFor(x => x.Url)
                @Html.ValidationMessageFor(x => x.Url)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}
